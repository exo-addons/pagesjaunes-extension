<?xml version="1.0" encoding="UTF-8"?>

<Module>

  <ModulePrefs author="eXoPlatform" 

               title="PagesJaunes Recherche"

               directory_title="PagesJaunes Recherche"

               description="PagesJaunes - Recherche via l'utilisation des API">
  	<Require feature="dynamic-height"/>

  </ModulePrefs>
  <UserPref name="adresseEntreprise" display_name="Adresse de l'entreprise" />
  <Content type="html">

  <![CDATA[
  
    <div style="position: absolute;">
	    <a href="http://www.pagesjaunes.fr" title="PagesJaunes, retour à l'accueil" class="idTag_RETOUR-HP">
	        <img src="http://static.pagesjaunes.fr/ilo/static_4.2.0.5/images/logo-pagesjaunes.png" alt="PagesJaunes" height="100" width="100">
	    </a>
    </div>
    
    <div id="searchForm" style="background-color: yellow;padding-left: 300px;height: 130px">
      <form method="post">
		<table>
			<tr>
				<td>
					<label for="quoiqui"><b>Quoi, qui ?</b></label><br/>
					<input size="50" type="text" name="quoiqui" id="quoiqui"/>
				</td>
						 
				<td>
					<label for="ou"><b>Où ?</b></label><br />
					<input size="50" type="text" name="ou" id="ou"/>
				</td>
				
				<td>
					<br />
					<button style="background-color: purple; color: white;" onClick="updateSearchResults();return xt_click(this,'C','','Trouver::Trouver_HP','A');" title="Trouver sur PagesJaunes" id="btnValidSearch" value="Trouver" type="button"><b>Trouver</b></button>
				</td>
				
			</tr>
		</table>
		<label for="autour_de_mon_entreprise"><b>Trouver en un click autour de mon entreprise</b></label><br/>
					
		<a href="#" onClick="updateSearchResults('max=3&what=resto','true');return xt_click(this,'C','','pictos::picto_resto','A');"><label for="resto"><b>RESTO</b></label></a>

		<a href="#" onClick="updateSearchResults('max=3&what=medecin','true');return xt_click(this,'C','','pictos::picto_medecin','A');"><label for="medecin"><b>MEDECIN</b></label></a>
			
		<a href="#" onClick="updateSearchResults('max=3&what=pharmacie','true');return xt_click(this,'C','','pictos::picto_pharmacie','A');"><label for="pharmacie"><b>PHARMACIE</b></label></a>
			
		<a href="#" onClick="updateSearchResults('max=3&what=vêtements','true');return xt_click(this,'C','','pictos::picto_vetements','A');"><label for="vêtements"><b>VÊTEMENTS</b></label></a>
				
		<a href="#" onClick="updateSearchResults('max=3&what=fleuriste','true');return xt_click(this,'C','','pictos::picto_fleuriste','A');"><label for="fleuriste"><b>FLEURISTE</b></label></a>
			
		<a href="#" onClick="updateSearchResults('max=3&what=coiffeur','true');return xt_click(this,'C','','pictos::picto_coiffeur','A');"><label for="coiffeur"><b>COIFFEUR</b></label></a>
	  </form>
    </div>
    <div id="searchResults" >
      <h2 style="text-align: center;font-weight:bold">Bienvenue sur le gadget d'affichage des résulats Pages Jaunes<h2>
    </div>
	
	<link rel="stylesheet" type="text/css" media="all" href="skin/style.css">
    <script type="text/javascript" src="skin/jquery.js"></script>
    <script type="text/javascript" src="skin/jquery.bpopup-0.9.4.min.js"></script>
    <script type="text/javascript" src="skin/PagesJaunesRecherche.js"></script>
  ]]>

  </Content>

</Module>